extends layout

block loginroom
	div.container#loginarea
		div.col-md-offset-4.col-md-4.shadowed(style="border:1px solid black; margin-top:75px;")
			div.col-sm-offset-2.col-sm-10(style="padding-left:4px;")
				h1 Get Started!
			form.form-horizontal(role="form")
				div.form-group
					label.col-sm-2.control-label(for="pseudo") Pseudo
					div.col-sm-10
						input.form-control#pseudo(type="text")
				div.form-group
					label.col-sm-2.control-label(for="roomname") Room name
					div.col-sm-10
						input.form-control#roomname(type="text")
				div.form-group
					div.col-sm-offset-2.col-sm-10
						button.btn.btn-success(type="button", onclick="setInformation()")#loginsubmit Go!

block paintroom
	div.container#paintchatroom
		div.col-md-9
			button#freeDraw Free
			button#lineDraw Line
			button#rectangleDraw Rectangle
			button#circleDraw Circle
			button#ellipseDraw Ellipse
			button#textType Text
			button#saveButton
				a(href="" id="save" download="saveImage" style="text-decoration:none;color:black;") Save
			.preview
				.colorpicker(style='display: none;')
					canvas#picker(width='300', height='300')
					.controls
						div
							label R
							input#rVal(type='text')
						div
							label G
							input#gVal(type='text')
						div
							label B
							input#bVal(type='text')
						div
							label RGB
							input#rgbVal(type='text')
						div
							label HEX
							input#hexVal(type='text')
						button#Cancel Cancel
		div.col-md-9
			canvas#draw.shadowed-light(style="width:100%; height:500px; ")
			img(id="saveImage" style="display:none")
		div.col-md-3#chatarea.shadowed-light
			div.row#chatheader(style="height: 55px; border-bottom:1px solid black;")
				h3 Chat
			div.row#chatmessages
				input(type='text')#pseudoInput
				button#pseudoSet Set Pseudo
				div#chatEntries
			div#chatControls
				input(type='text')#messageInput
				button#submit Send
	script(type="text/paperscript", src="javascripts/draw.js", canvas="draw")
	script(src="/javascripts/color.js")
